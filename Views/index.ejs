<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Credit Card Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Credit Card Tracker</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addCard">Add Card</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Credit Cards</h2></div>
    <br>
    <div class="row">
      <% if (products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="col-md-4">
            <div class="card mb-4">
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.cardName %>">
              <div class="card-body">
                <h5 class="card-title"><b>Card name: </b><%= product.cardName %></h5>
                <p class="card-text"><b>Name: </b><%= product.name %></p>
                <p class="card-text"><b>Benefits: </b><%= product.benefits %></p>
                <a href="/product/<%= product.productId %>" class="btn btn-primary">View</a>
                <a href="/editProduct/<%= product.productId %>" class="btn btn-warning">Edit</a>
                <a href="/deleteProduct/<%= product.productId %>" class="btn btn-danger">Delete</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No products found.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
